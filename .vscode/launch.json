  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--experimental-vm-modules",
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand"
      ],
      "args": [
        "src"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "Debug ESLint",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect",
        "${workspaceRoot}/node_modules/.bin/eslint"
      ],
      "args": [
        "-c",
        "eslint.config.mjs",
        "src/**/*"
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
  ]
}